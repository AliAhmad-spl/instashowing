<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture %>
  </div>

  <div class="field">
    <%= form.label :beds %>
    <%= form.number_field :beds %>
  </div>

  <div class="field">
    <%= form.label :baths %>
    <%= form.number_field :baths %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div class="field">
      <%= form.label :approval_type %>
      <%= form.select :approval_type,options_for_select([ "Auto Accept", "Agent Approves" ,"Occupant Approves"], "Auto Accept") %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
   <div class="field">
    <%= form.hidden_field :user_id ,value:current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
