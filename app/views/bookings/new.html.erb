<div class="container my-4">
 <div class="row">
  <div class="col-md-5">
   <div class="row mb-3">
    <div class="col-md-6">
     <%= link_to '<i class="fas fa-arrow-left fa-2x mr-3"></i>'.html_safe, bookings_path %>
     <span class="h3"><%= @property.name %></span>
    </div>
    <div class="col-md-6 text-right bookings-p">
     <%= link_to "Edit",edit_property_path(id:@property.id) ,class:"btn btn-primary radius-5"%>
     <%= form_tag charges_path do %>
      <div id="error_explanation">
        <% if flash[:error].present? %>
        <p><%= flash[:error] %></p>
      <% end %>
      </div>
      <%= hidden_field_tag(:property,@property.id) %>
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-description="Subscription"
      data-amount="1000.00"
      data-locale="auto">
      </script>
     <% end %>
    </div>
   </div>
   <div class="property-booking">
    <div class="property mb-3" style="background:url(<%= @property&.pictures[0]&.url %>)"></div>
    <p><%= @property.description %></p>
    <p><i class="fas fa-map-marker-alt mr-3"></i><%= @property.address %></p>
    <p><i class="fas fa-bed mr-3"></i><%= @property.beds %></p>
    <p><i class="fas fa-bath mr-3"></i><%= @property.baths %></p>
   </div>
    </div>
    <%= render 'form', booking: @booking %>
  </div>
</div>
