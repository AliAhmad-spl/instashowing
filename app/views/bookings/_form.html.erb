  $('#datetimepicker3').datetimepicker({
  format:'m/d/Y h:i A',
  inline:true,
  // timepicker:false,
  step: 30,
  minDate: 0,
  minTime:'8:00',
  maxTime:'20:30',
  timepicker: true
