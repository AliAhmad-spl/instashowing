<div class="col-md-7">
  <div class="form-booking">
    <%= form_with(model: booking, local: true) do |form| %>
    <% if booking.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
  
        <ul>
        <% booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-2">
      <%= form.text_field :start_time, id:"datetimepicker3" %>
      <%= form.hidden_field :property_id,value:params[:id] %>
    </div>
    <div class="field">
      <%= form.label :name, class:"mb-1" %>
      <%= form.text_field :name ,required: true, class:"form-control mb-2" %>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= form.label :email, class:"mb-1" %>
          <%= form.email_field :email,required: true, class:"form-control mb-2" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= form.label :phone, class:"mb-1" %>
          <%= form.number_field :phone,required: true, class:"form-control mb-2" %>
        </div>
      </div>
    </div>
  </div>
  <div class="actions text-right">
    <%= form.submit "Create Booking", class:"btn btn-primary btn-lg mt-3" %>
  </div>
</div>    
<% end %>  

